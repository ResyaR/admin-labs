// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  email     String?   @unique
  password  String
  name      String?
  role      String    @default("admin") // admin, user, etc.
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  sessions  Session[]
  teachingSessions TeachingSession[]
  issueReports     IssueReport[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model PC {
  id          String   @id @default(cuid())
  hostname    String   @unique
  brand       String?
  os          String?
  osVersion   String?
  osBuild     String?
  arch        String?
  location    String?
  status      String   @default("active") // active, maintenance, offline
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastSeen    DateTime @default(now())

  // Relations
  cpu         CPU?
  gpu         GPU?
  motherboard Motherboard?
  rams        RAM[]
  storages    Storage[]
  networks    NetworkInterface[]
  changes     ComponentChange[]

  @@map("pcs")
}

model CPU {
  id          String   @id @default(cuid())
  pcId        String   @unique
  model       String
  cores       Int
  clock       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@map("cpus")
}

model GPU {
  id          String   @id @default(cuid())
  pcId        String   @unique
  model       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@map("gpus")
}

model Motherboard {
  id          String   @id @default(cuid())
  pcId        String   @unique
  manufacturer String?
  model       String?
  serialNumber String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@map("motherboards")
}

model RAM {
  id          String   @id @default(cuid())
  pcId        String
  manufacturer String?
  model       String?
  serialNumber String?
  capacity    String?
  speed       String?
  type        String?
  formFactor  String?
  slotIndex   Int?     // Index slot RAM (0, 1, 2, etc.)
  bankLabel   String?  // Bank Label e.g. "BANK 0"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@index([pcId])
  @@map("rams")
}

model Storage {
  id          String   @id @default(cuid())
  pcId        String
  manufacturer String?
  model       String?
  serialNumber String?
  size        String?
  interface   String?
  type        String?
  diskIndex   Int?     // Index disk (0, 1, 2, etc.)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@index([pcId])
  @@map("storages")
}

model NetworkInterface {
  id          String   @id @default(cuid())
  pcId        String
  name        String
  macAddr     String?
  ipv4        String?
  isUp        Boolean  @default(true)
  bandwidth   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@index([pcId])
  @@map("network_interfaces")
}

model ComponentChange {
  id          String   @id @default(cuid())
  pcId        String
  componentType String // cpu, gpu, ram, storage, motherboard, network
  componentId String?  // ID dari komponen yang berubah
  changeType  String   // added, removed, modified
  oldValue    String?  // JSON string untuk nilai lama
  newValue    String?  // JSON string untuk nilai baru
  message     String   // Pesan perubahan
  severity    String   @default("warning") // info, warning, critical
  createdAt   DateTime @default(now())

  pc          PC       @relation(fields: [pcId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@map("component_changes")
}

model AppCredential {
  id            String   @id @default(cuid())
  name          String
  credentialKey String   @unique @default(cuid()) // Unique key for login
  isActive      Boolean  @default(true)
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("app_credentials")
}

model Lab {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  capacity    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teachingSessions TeachingSession[]
  issueReports     IssueReport[]

  @@map("labs")
}

// Riwayat Sesi Mengajar Guru
model TeachingSession {
  id          String    @id @default(cuid())
  userId      String
  labId       String
  labName     String    // Denormalized for quick access
  startedAt   DateTime  @default(now())
  scheduledEndTime DateTime? // Waktu berakhir yang dijadwalkan
  endedAt     DateTime?
  duration    Int?      // Duration in minutes, calculated on end
  notes       String?   // Optional notes from teacher
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  lab  Lab  @relation(fields: [labId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([labId])
  @@index([startedAt])
  @@map("teaching_sessions")
}

// Laporan Masalah PC dari Guru
model IssueReport {
  id          String   @id @default(cuid())
  reporterId  String   // User who reported
  labId       String
  pcId        String?  // Optional: specific PC with issue
  pcHostname  String?  // Denormalized for display
  category    String   // hardware, software, network, other
  priority    String   @default("medium") // low, medium, high, critical
  title       String
  description String
  status      String   @default("open") // open, in_progress, resolved, closed
  resolvedAt  DateTime?
  resolvedBy  String?
  resolution  String?  // Resolution notes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reporter User @relation(fields: [reporterId], references: [id], onDelete: Cascade)
  lab      Lab  @relation(fields: [labId], references: [id], onDelete: Cascade)

  @@index([reporterId])
  @@index([labId])
  @@index([status])
  @@index([createdAt])
  @@map("issue_reports")
}
